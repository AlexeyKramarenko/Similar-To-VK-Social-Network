
@{
    string div1 = @"
                        <div class='input_container'>
                            <input type='file' id='inputfile' onchange='return vm.sendAvatar()' />
                        </div>
                        <div id='addNewPhotos' 
                             class='addNewPhotos' 
                             onclick='vm.upload()' 
                             onmouseover='vm.changeColor(this)' 
                             onmouseout='vm.changeColor(this)'>
                             Upload avatar
                        </div>";

    string div2 = @"
                        <div id='send_message'>
                            <label for='modal-1' class='send_message_btn'>Send message</label>
                            <div>You are friend</div>
                        </div>";

    string div3= @"
                        <div id='send_message'>
                            <label for='modal-1' class='send_message_btn'>Send message</label>
                            <input
                                type='button'
                                id='AddToFriends'
                                class='send_message_btn'
                                value='Add to friends' 
                                onclick='return vm.addToFriends()' />
                        </div>";


    string messageForm = null;

    switch ((int)ViewBag.RelationshipDefinitionIDOfCurrentVisitor)
    {
        case 1:
            messageForm = div1;
            break;

        case 2:
            messageForm = div2;
            break;

        case 3:
            messageForm = div3;
            break;
    }
}
 

@Html.Raw(messageForm)