@model MvcApp.ViewModel.InterestsViewModel


<table>
    <tr>
        <td class="profiles">
            Деятельность:
            @Html.HiddenFor(a => a.ProfileID)

        </td>
        <td>
            @Html.TextBoxFor(a => a.Activity)
        </td>
    </tr>
    <tr>
        <td class="profiles">
            Интересы:
        </td>
        <td>
            @Html.TextBoxFor(a => a.Interests)
        </td>
    </tr>
    <tr>
        <td class="profiles">
            Любимая музыка:
        </td>
        <td>
            @Html.TextBoxFor(a => a.Music)
        </td>
    </tr>
    <tr>
        <td class="profiles">
            Любимые фильмы:
        </td>
        <td>
            @Html.TextBoxFor(a => a.Films)
        </td>
    </tr>
    <tr>
        <td class="profiles">
            Любимые книги:
        </td>
        <td>
            @Html.TextBoxFor(a => a.Books)
        </td>
    </tr>
    <tr>
        <td class="profiles">
            Любимые игры:
        </td>
        <td>
            @Html.TextBoxFor(a => a.Games)
        </td>
    </tr>
    <tr>
        <td class="profiles">
            Любимые цитаты:
        </td>
        <td>
            @Html.TextBoxFor(a => a.Quotes)
        </td>
    </tr>
    <tr>
        <td class="profiles">
            О себе:
        </td>
        <td>
            @Html.TextBoxFor(a => a.AboutMe)
        </td>
    </tr>
</table>
<br />
<hr />
<br />

<input type="button" id="btnInterestsInfo" value="Save interests" onclick="updateInterestsInfo()" class="btnSave" />



